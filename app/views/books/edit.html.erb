<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>Editing Book</h2>

      <%= form_with model: @book do |f| %>
        <p>Title</p>
        <%= f.text_field :title %>
        <p>Opinion</p>
        <%= f.text_area :opinion %><br>
        <%= f.submit 'Update Book', class:"btn btn-success" %><br>

        <%= link_to "Show", book_path(@book.id) %>
        |
        <%= link_to "Back", :books %>
      <% end %>

    </div>
  </div>
</div>
