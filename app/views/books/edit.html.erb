<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>Editing Book</h2>

      <%= form_with model: @book do |f| %>
        <label for="bookTitle">Title</label><br>
        <%= f.text_field :title, autofocus: true, id:"bookTitle" %><br>
        <label for="bookOpinion">Opinion</label><br>
        <%= f.text_area :body, autofocus: true, id:"bookOpinion" %><br>
        <%= f.submit 'Update Book', class:"btn btn-success" %><br>

        <%= link_to "Show", book_path(@book.id) %>
        |
        <%= link_to "Back", :books %>
      <% end %>

    </div>
  </div>
</div>
