<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2 class="mt-3">Editing Book</h2>

        <div>
          <% if @book.errors.any? %>
            <h4><%= @book.errors.count %>errors prohibited this obj from being saved:</h4>
            <ul>
              <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          <% end %>
        </div>

      <%= form_with model: @book do |f| %>
        <label for="bookTitle">Title</label><br>
        <%= f.text_field :title, autofocus: true, id:"bookTitle", class: 'form-control book_title' %><br>
        <label for="bookOpinion">Opinion</label><br>
        <%= f.text_area :body, autofocus: true, id:"bookOpinion", class: 'form-control book_body' %><br>
        <%= f.submit 'Update Book', class:"btn btn-success" %><br>

        <%= link_to "Show", book_path(@book.id) %>
        |
        <%= link_to "Back", :books %>
      <% end %>
