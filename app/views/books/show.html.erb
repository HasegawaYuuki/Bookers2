<div class="container px-5 px-sm-0">
  <div>
  <% if @book.errors.any? %>
    <h4><%= @book.errors.count %>errors prohibited this obj from being saved:</h4>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  </div>

  <div class="row">

    <div class="col-md-3">
      <%= render 'users/user_info', user: @user %>

      <%= render 'books/new', book:Book.new %>
    </div>


    <div class="col-md-8 offset-md-1">
      <h2 class="mt-3">Book detail</h2>
      <table class="table table-hover">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@books.user.id) do %>
                <%= image_tag @books.user.get_profile_image(80, 80)%><br>
                <%= @user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@books.id) do %>
                <%= @books.title %>
              <% end %>
            </td>
            <td><%= @books.body %></td>
            <td>
              <% if @books.favorited_by?(current_user) %>
                <%= link_to book_favorites_path(@books), method: :delete do %>
                  <i class="fa-solid fa-heart"></i>
                <% end %>
              <% else %>
                <%= link_to book_favorites_path(@books), method: :post do %>
                  <i class="fa-regular fa-heart"></i>
                <% end %>
              <% end %>
              <%= @books.favorites.count %>
            </td>
            <td>
              コメント数：<%= @books.book_comments.count %>
            </td>
            <% if @books.user == current_user %>
            <td><%= link_to "Edit", edit_book_path(@books.id), class:"btn btn-success md-3" %></td>
            <td><%= link_to "Destroy", book_path, method: :delete, "data-confirm" => "本当に消しますか？",class:"btn btn-danger md-3" %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
      <%= render 'book_comments/comment', books: @books, book_comment: @book_comment %>
    </div>
  </div>
</div>

