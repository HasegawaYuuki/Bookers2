<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2 class="mt-3">Rditing Group</h2>

        <div>
          <% if @group.errors.any? %>
            <h4><%= @group.errors.count %>errors prohibited this obj from being saved:</h4>
            <ul>
              <% @group.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          <% end %>
        </div>

      <%= form_with model: @group do |f| %>
        <label for="groupName">グループ名</label><br>
        <%= f.text_field :name, autofocus: true, id:"GroupName", class: 'form-control Group_Name' %><br>
        <label for="groupIntroduction">紹介文</label><br>
        <%= f.text_area :introduction, autofocus: true, id:"GroupIntroduction", class: 'form-control Group_Introduction' %><br>
        <label for="groupImage">グループ画像</label><br>
        <%= f.file_field :group_image, placeholder: "グループ画像", accept: "image/*" %><br>
        <%= f.submit 'Update Group', class:"btn btn-success mt-4" %><br>
      <% end %>