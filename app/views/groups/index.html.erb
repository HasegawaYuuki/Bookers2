<div class="container px-5 px-sm-0">
  <div class="row">

    <div class="col-md-3">
      <%= render 'users/user_info', user: @user %>
      <%= render 'books/new', book:Book.new %>
    </div>


    <div class="col-md-8 offset-md-1">
      <h2 class="mt-3">Groups</h2>
      <table class="table table-hover">
        <thead>
          <tr>
            <th></th>
            <th>グループ名</th>
            <th>紹介文</th>
            <th>メンバー数</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @groups.each do |group| %>
            <tr>
              <td><%= image_tag group.get_group_image(50, 50) %></td>
              <td><%= link_to group.name, group_path(group) %></td>
              <td><%= link_to "Show", group, class: "group_#{group.id}" %></td>
              <td><%= group.users.count %></td>
              <% if group.is_owned_by?(current_user) %>
                <td><%= link_to "Edit", edit_group_path(group), class: "btn btn-success group_#{group.id}" %></td>
              <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>